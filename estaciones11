                        echo "$estacion,$inten,$acum" > $dir/$estacion.txt
                        echo "$actual,$estacion,$acum,$inten,$fecha" >> $dir/$estacionacum.txt

                        fi
                    done
                

                elif [[ $file == *.txt  ]]; then
                    echo "Archivo no esta comprimido"
                    while IFS= read -r line; do
                        compara="`echo "$line" | cut -b 1,2`"

                        if [[ $compara == "01" ]]; then
