                        gzip -c $dir2/$estacion.csv > $dir3/$estacion2/$estacion.gz
                        mv $dir3/$estacion2/$estacion.gz $dir3/$estacion2/dbp$estacion$aniomes.gz
                        chown apache:centos $dir3/$estacion2/dbp$estacion$aniomes.gz
